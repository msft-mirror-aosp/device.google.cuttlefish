<?xml version='1.0' encoding='utf-8' standalone='yes' ?>
<display-settings>
    <!-- Use physical port number instead of local id -->
    <config identifier="1" />

    <!-- Display settings for the driver display -->
    <display name="port:0"
        ignoreOrientationRequest="true" />

    <!-- Display settings for cluster -->
    <display name="port:1"
        ignoreOrientationRequest="true"
        dontMoveToTop="true" />
</display-settings>
