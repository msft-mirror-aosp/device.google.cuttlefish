cvd_host_package_customization {
    name: "cvd-host_package",
    deps: cvd_host_tools +
        cvd_host_tests,
    multilib: {
        common: {
            deps: cvd_host_webrtc_assets +
                cvd_host_avb_testkey +
                cvd_host_model_simulator_files +
                cvd_host_bootloader +
                cvd_bluetooth_config_files +
                cvd_openwrt_images,
        },
    },

    arch: {
        x86_64: {
            multilib: {
                common: {
                    deps: cvd_host_seccomp_policy_x86_64,
                },
            },
        },
        arm64: {
            multilib: {
                common: {
                    deps: cvd_host_seccomp_policy_aarch64,
                },
            },
        },
    },
    target: {
        linux_bionic: {
            multilib: {
                common: {
                    deps: ["tzdata_host"],
                },
            },
        },
        linux_bionic_x86_64: {
            enabled: false,
        },
        darwin: {
            enabled: false,
        },
    },
}
